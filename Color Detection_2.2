color = input("Please enter a color parameter:\n")
if color=='b':
    egg_color='blue'
    l_h,l_s,l_v = 85,75,102
    u_h,u_s,u_v = 109,184,255
    print("Color Parameter = Blue")
elif color=='p':
    egg_color='pink'
    l_h,l_s,l_v = 161,40,146
    u_h,u_s,u_v = 173,104,255
    print("Color Parameter = Pink")
elif color=='u':
    egg_color='purple'
    l_h,l_s,l_v = 120,21,62
    u_h,u_s,u_v = 139,142,255
    print("Color Parameter = Purple")
elif color=='o':
    egg_color = 'orange'
    l_h,l_s,l_v = 0,43,151
    u_h,u_s,u_v = 14,102,255
    print("Color Parameter = Orange")
elif color=='g':
    egg_color = 'green'
    l_h,l_s,l_v = 56,49,149
    u_h,u_s,u_v = 76,130,255
    print("Color Parameter = Green")
elif color=='r':
    egg_color = 'red'
    l_h,l_s,l_v = 29,0,12
    u_h,u_s,u_v = 68,82,187
    print("Color Parameter = Red")
elif color=='y':
    egg_color = 'yellow'
    l_h,l_s,l_v = 146,0,121
    u_h,u_s,u_v = 184,114,255
    print("Color Parameter = Yellow")

 
while True:
    img_resp=urllib.request.urlopen(url)
    imgnp=np.array(bytearray(img_resp.read()),dtype=np.uint8)
    frame=cv2.imdecode(imgnp,-1)
    
    hsv = cv2.cvtColor(frame, cv2.COLOR_BGR2HSV)

    l_b = np.array([l_h,l_s,l_v])
    u_b = np.array([u_h,u_s,u_v]) 

    cx = 0
    cy = 0
    
    mask = cv2.inRange(hsv, l_b, u_b)

    cnts, _ = cv2.findContours(mask,cv2.RETR_TREE,cv2.CHAIN_APPROX_SIMPLE)

    for c in cnts:
        area=cv2.contourArea(c)
        if area>100:
            cv2.drawContours(frame,[c],-1,(255,0,0),3)
            M=cv2.moments(c)
            cx=int (M["m10"]/M["m00"])
            cy=int (M["m01"]/M["m00"])

            cv2.circle(frame, (cx,cy),7,(255,255,255),-1)
            cv2.putText(frame,egg_color,(cx-20, cy-20),cv2.FONT_HERSHEY_SIMPLEX,1, (0,0,255),2)
            
    res = cv2.bitwise_and(frame, frame, mask=mask)

    x_egg = cx
    y_egg = cy
    print("X Coordinate = ", x_egg)
    print("Y Coordinate = ", y_egg)
 
    cv2.imshow("live transmission", frame)
    cv2.imshow("mask", mask)
    cv2.imshow("res", res)
    key=cv2.waitKey(5)
    if key==ord('q'):
        break

    #Extra loop to filter out the data to be sent a singular time when there is a bool from the ESP to look for the egg's color
    # this is to send the data to the ESP32-CAM
    #time.sleep(2)
    url_json = 'http://192.168.4.1/jcoord'   
    data = {'centerX': x_egg, 'centerY': y_egg}
    headers={'Content-Type': 'application/json; charset=UTF-8'}
    response, content = http.request(url_json, 'POST', headers=headers, body=json.dumps(data))
    # print the response from the ESP32-CAM to debug the communication
    print (response)
    print (content)
    
cv2.destroyAllWindows()
